---
const { title } = Astro.props;
import "../styles/global.css";
---

<!doctype html>
<html lang="fr">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>{title}</title>
    </head>
    <body class="bg-gray-50">
        <div class="app flex h-screen">
            <!-- Sidebar App -->
            <aside
                class="sidebar w-64 bg-gradient-to-b from-gray-100 to-gray-50 border-r border-gray-200 shadow-sm overflow-y-auto"
            >
                <h2 class="text-xl font-bold text-gray-900 mb-6 px-4 pt-4">
                    App
                </h2>
                <nav class="px-2">
                    <ul class="space-y-2">
                        <li>
                            <a
                                href="/app/"
                                class="block px-4 py-2 rounded-lg text-gray-700 hover:bg-blue-100 hover:text-blue-600 transition duration-200 font-medium"
                            >
                                üè† Accueil
                            </a>
                        </li>
                        <li>
                            <a
                                href="/app/pages/about"
                                class="block px-4 py-2 rounded-lg text-gray-700 hover:bg-blue-100 hover:text-blue-600 transition duration-200 font-medium"
                            >
                                üìÑ Pages
                            </a>
                        </li>
                    </ul>
                </nav>
            </aside>

            <!-- Main content -->
            <main class="content flex-1 flex flex-col overflow-hidden">
                <!-- Barre de recherche -->
                <header
                    class="search-bar bg-white border-b border-gray-200 shadow-sm px-6 py-4"
                >
                    <input
                        type="text"
                        placeholder="Rechercher..."
                        class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200"
                    />
                </header>

                <section class="page flex-1 overflow-y-auto p-6">
                    <slot />
                </section>
            </main>
        </div>
    </body>
</html>
