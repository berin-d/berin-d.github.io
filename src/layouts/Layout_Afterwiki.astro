---
const { title } = Astro.props;
import "../../public/style.css";
---
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
</head>
<body class="bg-gray-50">
<div class="app flex h-screen">
    <!-- Sidebar AfterLife Wiki -->
    <aside class="sidebar w-64 from-purple-100 to-purple-50 border-r border-purple-200 shadow-sm overflow-y-auto">
        <h2 class="text-xl font-bold text-purple-900 mb-6 px-4 pt-4">AfterLife Wiki</h2>
        <nav class="px-2">
            <ul class="space-y-2">
                <li>
                    <a href="/afterwiki/" class="block px-4 py-2 rounded-lg text-purple-700 hover:bg-purple-200 hover:text-purple-900 transition duration-200 font-medium">
                        Accueil
                    </a>
                </li>
                <li>
                    <a href="/afterwiki/intro" class="block px-4 py-2 rounded-lg text-purple-700 hover:bg-purple-200 hover:text-purple-900 transition duration-200 font-medium">
                        Intro
                    </a>
                </li>
                <li>
                    <a href="/afterwiki/guide" class="block px-4 py-2 rounded-lg text-purple-700 hover:bg-purple-200 hover:text-purple-900 transition duration-200 font-medium">
                        Guide
                    </a>
                </li>
                <li>
                    <a href="/afterwiki/netcode" class="block px-4 py-2 rounded-lg text-purple-700 hover:bg-purple-200 hover:text-purple-900 transition duration-200 font-medium">
                        NetCode
                    </a>
                </li>
            </ul>
        </nav>
    </aside>

    <!-- Main content -->
    <main class="content flex-1 flex flex-col overflow-hidden">
        <!-- Barre de recherche -->
        <header class="search-bar bg-white border-b border-purple-200 shadow-sm px-6 py-4">
            <input type="text" placeholder="Rechercher..." class="w-full px-4 py-2 rounded-lg border border-purple-300 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition duration-200" />
        </header>

        <section class="page flex-1 overflow-y-auto p-6">
            <slot />
        </section>
    </main>
</div>
</body>
</html>
